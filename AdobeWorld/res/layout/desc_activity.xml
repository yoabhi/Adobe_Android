<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="@drawable/backimgg"
    >

    
<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    >
        <ImageView
            android:id="@+id/proImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/proName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="40dp"
            />
        
        </LinearLayout>
        
<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp" >
        
    <TextView   
        android:id="@+id/help_Maintxt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:text="Click Here: "
            android:clickable="true"
            android:gravity="left"
            android:onClick="toggle_contents"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            />
 
<!--content to hide/show -->

<TextView   
    android:id="@+id/txt_main"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
            android:text="main discription"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="47dp"
            />
    
    </LinearLayout>
    
<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp" 
    >
        
    <TextView
            android:id="@+id/proType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="44dp"
            android:text="Type:" />

        <TextView
            android:id="@+id/proTypename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
           android:gravity="center"
           android:paddingLeft="62dp"
            android:text="TextView" 
/>
   </LinearLayout>
   

<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="20dp" 
    >

        <TextView
            android:id="@+id/proInapp_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:gravity="left"
            android:text="Inapp-Purchase:"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
/>
        
        <TextView
            android:id="@+id/proInappYesNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView" 
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
/>
        
  
    </LinearLayout>
    
<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="20dp" 
    >
        
    <TextView
            android:id="@+id/LastUpdatetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:gravity="left"
          android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Last Updated:"
/>
        
        <TextView
            android:id="@+id/LastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="TextView" 
            android:paddingLeft="35dp"
/>
        
      </LinearLayout>

<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp" 
    android:orientation="horizontal" 
    >

<RatingBar
    android:id="@+id/ratingBar1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:numStars="5"
    android:stepSize="0.1"
    android:rating="5"
    
    />

<TextView
            android:id="@+id/ratingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:textColor="#ffffff"
            android:textSize="31sp"
            android:textStyle="bold"
            android:text="Tex"
           android:layout_gravity="center"
           android:paddingLeft="25dp"
             />

</LinearLayout>

<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="30dp" 
    >

     <Button
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:background="@drawable/backicon"
         android:layout_marginLeft="30dp"
         />
    <Button
        android:id="@+id/appstore"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:background="@drawable/googleplay" 
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/share"
      android:layout_width="44dp"
        android:layout_height="41dp"
        android:background="@drawable/sharee"
        android:layout_marginLeft="30dp" />
    
</LinearLayout>


   
    

</LinearLayout>
